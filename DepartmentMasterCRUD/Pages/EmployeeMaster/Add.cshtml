@page
@model AddModel
@{
}
@if (!string.IsNullOrEmpty(TempData["ErrMessage"] as string))
{
    <div class="alert alert-danger alert-dismissible d-flex justify-content-between">
        @TempData["ErrMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>

    </div>
}
<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title"><strong>Add New Employee</strong></h4>
    </div>
    <div class="modal-body">
        <form method="post">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="employee.emp_FirstName"></label>
                        <label class="required-field">*</label>
                        <input asp-for="employee.emp_FirstName" class="form-control" tabindex="1" placeholder="First Name" />
                        <span class="alert-danger" asp-validation-for="employee.emp_FirstName"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="employee.emp_LastName"></label>
                        <label class="required-field">*</label>
                        <input asp-for="employee.emp_LastName" class="form-control" tabindex="2" placeholder="Last Name" />
                        <span class="alert-danger" asp-validation-for="employee.emp_LastName"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="employee.emp_Department"></label>
                        <label class="required-field">*</label>
                        <input asp-for="employee.emp_Department" class="form-control" tabindex="3" placeholder="Department" />
                        <span class="alert-danger" asp-validation-for="employee.emp_Department"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="employee.emp_Designation"></label>
                        <label class="required-field">*</label>
                        <input asp-for="employee.emp_Designation" class="form-control" tabindex="4" placeholder="Designation" />
                        <span class="alert-danger" asp-validation-for="employee.emp_Designation"></span>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group text-center">
                <input type="submit" value="Save" class="btn btn-primary" tabindex="5" />
                <a class="btn btn-default" href="/EmployeeMaster/Index" tabindex="6">Cancel</a>
            </div>
        </form>
    </div>
</div>

<style>
    .form-group input[type="text"] {
        margin-bottom: 15px;
    }

    .required-field {
        color: red;
        margin-left: 3px; /* Add some spacing between the label and the input */
    }
</style>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>